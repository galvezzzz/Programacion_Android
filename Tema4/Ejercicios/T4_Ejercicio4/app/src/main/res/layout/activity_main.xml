    </Spinner>

    <ImageButton
        android:id="@+id/imagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/aranya"
        android:scaleType="fitCenter">
    </ImageButton>



</LinearLayout>